{
    "manifest_version": 2,
    "name": "Login Pages Alert",
    "version": "0.1.0",
    "description": "ログインなしだと途中までしか読めないニュース記事を警告します。",
    "content_scripts": [
        {
            "matches": [
                "https://tech.nikkeibp.co.jp/*",
                "https://www.nikkei.com/*",
                "https://note.mu/*"
            ],
            "js": [
                "main.js"
            ],
            "css": [
                "main.css"
            ]
        }
    ],
    "page_action": {
        "default_popup": "popup.html"
    }
}